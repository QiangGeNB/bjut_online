@import '/font.wxss';
@import '/template/activity_item/activity_item.wxss';
@import '/template/rank_item/rank_item.wxss';

.page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.page-top {
  height: 100%;
}

scroll-view {
  height: 100%;
  width: 100%;
}

/* 侧边栏样式 */
.page-bottom{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: -1;
  overflow: hidden;
}
.side-list-wrapper{
  width: 100%;
  height: 90%;
  overflow: hidden;
  background-color: #1296db;
  padding-top: 60px;
  color: white;
}
.side-list{
  display: inline-block;
  margin: 0 5vw;
  height: 30px;
  width: 30px;
  font-size: 25px;
  color: #1296db;
  transition: color .5s;
}

.side-list-white{
  color: white;
}
.list-item{
  margin-top: 5vw;
  margin-left: 5vw;
}
.botton-item1{
  position: absolute;
  bottom: 5vw;
  left: 5vw;
  font-size: 4vw;
}
.botton-item2{
  position: absolute;
  bottom: 15vw;
  left: 5vw;
  font-size: 4vw;
}
.c-state1{
  transform: translate(50%,0%);
}  



.page-top{
  position: fixed;
  left: 0;
  top: 0px;
  width: 100%;
  height: 100%;
  background-color: white;
  z-index: 0;
  transition: All 0.4s ease; 
}

.filter{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 200;
  background-color: white;
  opacity: .8;
}
.search-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  padding: 10px 0;
  width: 100%;
  z-index: 1;
  transition: background-color .5s;
  background-color: white;
}

.search-button {
  display: inline-block;
  margin: 0 auto;
  height: 30px;
  width: 70%;
  border-radius: 5px;
  background-color: whitesmoke;
  font-size: 13px;
  line-height: 30px;
  text-align: center;
  vertical-align: top;
}

.search-wrapper-blue {
  background-color: #1296db;
}

.swiper-wrapper {
  width: 100%;
  margin-top: 50px;
}

.swiper {
  width: 100%;
  height: 200px;
}

.slide-image {
  width: 100%;
  border-radius: 2px;
}

.tag-wrapper {
  display: flex;
  width: 100%;
  background-color: white;
}

.tag:last-child {
  border-right: 1px solid rgba(0, 0, 0, 0);
}

.tag {
  flex: 1;
  padding: 5px;
  border-right: 1px solid rgba(0, 0, 0, 0.1);
  text-align: center;
}

.tag-text {
  display: inline;
  font-size: 14px;
  line-height: 16px;
  vertical-align: 1.6px;
}

.tag-select {
  color: #1296db;
  background-color: ghostwhite;
  border-bottom: 2px solid #1296db;
}

.gap {
  width: 100%;
  height: 10px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  background-color: ghostwhite;
}

.head-wrapper{
    margin-top: 70px;
}
.head-back{
    position: absolute;
    top: 50px;
    left: 0;
    width: 100%;
    height: 40vw;
    z-index: -100;
}
.head-back-filter{
    position: absolute;
    top: 50px;
    left: 0;
    width: 100%;
    height: 40vw;
    opacity: 1;
    z-index: -50;
    background: linear-gradient(180deg, rgba(255,255,255, 0), rgba(255,255,255, .7), rgba(255,255,255, 1));
}
.title-image{
    display: block;
    width: 70vw;
    height: 13vw;
    margin: 20vw auto;
    margin-bottom: 5vw;
}
.userinfo-avater{
    display: block;
    width: 15vw;
    height: 15vw;
    border-radius: 50%;
    margin: 0 auto;
}
.userinfo-info-wrapper{
    width: 100%;
    margin: 3vw 0;
    font-size: 3vw;
    text-align: center;
}
.userinfo-nickname{
    font-size: 4vw;
    font-weight: bold;
}
.tab{
    display: flex;
}
.tab-item{
    flex: 1;
    height: 7vw;
    line-height: 7vw;
    text-align: center;
    border-radius: 4px;
    margin: 0 9vw;
    font-size: 4vw;
    transition: all .2s;
}
.tab-selected{
    background-color: #1296db;
    color: white;
}
.myrank-step-wrapper{
    height: 17vw;
    width: 80vw;
    margin: 5vw auto;
    text-align: center;
    line-height: 17vw;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 4px;
    box-shadow: 10px 10px 15px #888888;
}
.myrank-step-wrapper text{
    font-size: 8vw;
    color: red;
    font-weight: bold;
    vertical-align: top;
}

.myrank-detail{
    display: flex;
}
.myrank-item-wrapper{
    flex: 1;
    margin: 4vw;
    padding: 3vw 1vw;
    text-align: center;
    border: 2px solid rgba(0, 0, 0, 0.1);
    border-radius: 4px;
    box-shadow: 5px 5px 15px #888888;
}
.rank-title{
    margin: 0 6vw;
    padding: 3vw 4vw;
    border-bottom: 1px solid black;
    font-size: 4vw;
    line-height: 4vw;
    color: #1296db;

}
.rank-rank{
    font-size: 7vw;
    margin: 3vw 0;
    color: red;
    font-weight: 300px;
}
.rank-gap{
    font-size: 3vw;
}
.rank-gap > text{
    font-size: 4vw;
    color: #1296db;
    font-weight: bold;
    vertical-align: bottom;
}
.myrank-remark{
    margin: 6vw;
    font-size: 3vw;
    color: rgba(0, 0, 0, 0.7)
}
.piker_text{
  display: block;
  width: 50vw;
  margin: 2vw auto;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  text-align: center;
  font-size: 4vw;
  padding-bottom: 2vw;
}