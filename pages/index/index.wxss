@import '/font.wxss';
@import '/template/activity_item/activity_item.wxss';
page{
    height: 100%;
}
.all {
    height: 100%;
}
scroll-view{
    height: 100%;
}
.search-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  padding: 10px 0;
  width: 100%;
  z-index: 1;
  background-color: #1296db;
}

.search-button {
  margin: 0 auto;
  height: 30px;
  width: 90%;
  border-radius: 5px;
  background-color: whitesmoke;
  font-size: 15px;
  line-height: 30px;
  text-align: center;
}

.swiper-wrapper {
  margin-top: 50px;
  width: 100%;
}

.swiper {
  width: 100%;
  height: 200px;
}

.slide-image {
  width: 100%;
  border-radius: 2px;
}

.tag-wrapper {
  width: 100%;
  height: 30px;
  margin: 5px;
  margin-bottom: -2px;
  padding: 10px;
  overflow: scroll;
  white-space: nowrap;
}

.tag-item {
  display: inline-block;
  height: 20px;
  padding: 5px 10px;
  border-radius: 10px;
  background: ghostwhite;
}

.blank {
  display: inline-block;
  margin: 0 8px;
}

.tap-name {
  display: inline;
  font-size: 14px;
  line-height: 10px;
}

.icon-tag {
  margin-right: 2px;
}

.gap {
  width: 100%;
  height: 10px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  background-color: gainsboro;
}
