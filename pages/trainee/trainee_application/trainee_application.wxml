<view class='apply-header-wrapper'>
  <image class='header-background-image' src='/images/trainee/push.png' mode="aspectFit"></image>
  <view class='line'></view>
  <view class='header-title'>
    <view class='title'>发布我的招聘实习信息</view>
    <view class='warning-wrapper'>
      <view>您所知道的</view> 正是大家所需要的
    </view>
  </view>
</view>
<view class='content-wrapper'>
  <view class='content-header-wrapper'>
    基本信息
  </view>
  <view class='content-item-wrapper'>
    <view class='content-title'>公司名称：</view>
    <input class='content-input' type='text'></input>
  </view>
  <view class='content-item-wrapper'>
    <view class='content-title'>需求职位：</view>
    <input class='content-input' type='text'></input>
  </view>
  <view class='content-item-wrapper'>
    <view class='content-title'>信息来源：</view>
    <picker bindchange="info_come_picker" value="{{info_come_index}}" range="{{info_come}}" mode='selector'>
      <view class="picker">
        {{info_come[info_come_index]}}
      </view>
    </picker>
  </view>
  <view class='content-item-wrapper'>
    <input class='other-come' placeholder='请填写信息来源' placeholder-style='font-size:3.5vw; color:gray'></input>
  </view>
</view>